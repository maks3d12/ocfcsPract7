<Application x:Class="SunClouds.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SunClouds"
             Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="WindowStyle" TargetType="Window">
                <!-- Здесь определите все настройки окна -->
                <Setter Property="WindowStyle" Value="None" />
                <Setter Property="FontFamily" Value="pack://application:,,,/Resources/#Jura" />
                <Setter Property="Foreground" Value="White" />
            </Style>
            <BooleanToVisibilityConverter x:Key="MyBoolToVisibilityConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/DayTheme.xaml"/>
                <ResourceDictionary Source="/Resources/TextBoxStyle.xaml"/>
                <ResourceDictionary Source="/Resources/WindowButtonsStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
